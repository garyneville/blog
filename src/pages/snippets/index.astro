---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allSnippets = await getCollection('snippets', ({ data }) => !data.draft);
const sortedSnippets = allSnippets.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

// Group by category
const snippetsByCategory = sortedSnippets.reduce((acc, snippet) => {
  const category = snippet.data.category || 'other';
  if (!acc[category]) acc[category] = [];
  acc[category].push(snippet);
  return acc;
}, {} as Record<string, typeof sortedSnippets>);

const categories = Object.keys(snippetsByCategory).sort();
---

<BaseLayout title="Code Snippets" description="Useful code snippets and DevOps tips">
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-4">Code Snippets</h1>
    <p class="text-gray-600 dark:text-gray-300">
      Quick solutions and useful code snippets for development and DevOps.
    </p>
  </div>

  {categories.map((category) => (
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 capitalize">{category}</h2>
      <div class="grid gap-4 md:grid-cols-2">
        {snippetsByCategory[category].map((snippet) => (
          <article class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between mb-2">
              <h3 class="text-lg font-semibold">
                <a href={`/snippets/${snippet.slug}`} class="hover:text-blue-600 transition-colors">
                  {snippet.data.title}
                </a>
              </h3>
              {snippet.data.language && (
                <span class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-800 rounded font-mono">
                  {snippet.data.language}
                </span>
              )}
            </div>
            
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">
              {snippet.data.description}
            </p>

            <div class="flex items-center justify-between">
              <div class="text-xs text-gray-500 dark:text-gray-400">
                {snippet.data.publishDate.toLocaleDateString()}
              </div>
              
              {snippet.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-1">
                  {snippet.data.tags.slice(0, 3).map((tag) => (
                    <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded">
                      #{tag}
                    </span>
                  ))}
                  {snippet.data.tags.length > 3 && (
                    <span class="text-xs text-gray-500">+{snippet.data.tags.length - 3}</span>
                  )}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </section>
  ))}

  {sortedSnippets.length === 0 && (
    <div class="text-center py-12">
      <p class="text-gray-600 dark:text-gray-400">No snippets yet. Check back soon!</p>
    </div>
  )}
</BaseLayout>